@model Ecommerce.Models.UserProfileViewModel

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <script>
        window.onload = function () {
            alert("@TempData["SuccessMessage"]");
        }
    </script>
}

<h2>Thông tin cá nhân</h2>
<form asp-action="UpdateProfile" method="post">
    <div class="mb-3">
        <label>Tên đăng nhập</label>
        <input type="text" class="form-control" value="@Model.UserName" readonly />
    </div>
    <div class="mb-3">
        <label>Email</label>
        <input type="email" name="Email" class="form-control" value="@Model.Email" />
    </div>
    <div class="mb-3">
        <label>Họ và tên</label>
        <input type="text" name="FullName" class="form-control" value="@Model.FullName" />
    </div>
    <div class="mb-3">
        <label>Số điện thoại</label>
        <input type="tel" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
</form>

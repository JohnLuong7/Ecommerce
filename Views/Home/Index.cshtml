@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #f8f8f8;
            color: #222;
        }

        /* Banner sang chảnh */
        .promo-banner {
            width: 100%;
            height: 50vh;
            position: relative;
            overflow: hidden;
            margin: 0 !important;
        }

            .promo-banner img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                filter: brightness(0.7);
                transition: transform 0.8s ease;
            }

            .promo-banner:hover img {
                transform: scale(1.05);
            }

        .promo-banner-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom right, rgba(0,0,0,0.4), rgba(0,0,0,0.1));
        }

        .promo-banner-text {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: #fff;
        }

            .promo-banner-text h1 {
                font-size: 3.5rem;
                font-weight: 700;
                letter-spacing: 2px;
            }

            .promo-banner-text p {
                font-size: 1.3rem;
                margin-top: 10px;
                opacity: 0.9;
            }

        /* Product card luxury */
        .product-card {
            border: none;
            border-radius: 16px;
            background: #fff;
            padding: 20px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
        }

            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 25px rgba(0,0,0,0.12);
            }

        .product-img {
            height: 220px;
            width: 100%;
            object-fit: contain;
            margin-bottom: 15px;
            transition: transform 0.3s ease;
        }

        .product-card:hover .product-img {
            transform: scale(1.05);
        }

        .product-title {
            font-size: 1.05rem;
            font-weight: 600;
            min-height: 2.8em;
        }

        .product-category {
            font-size: 0.85rem;
            color: #888;
            margin-bottom: 5px;
        }

        .price {
            font-size: 1.3rem;
            font-weight: 700;
            color: #d4af37; /* gold */
        }

        .rating {
            font-size: 0.85rem;
            color: #f5c518;
            margin-bottom: 8px;
        }

        /* Nút luxury */
        .btn-luxury {
            background: linear-gradient(45deg, #d4af37, #f7c948);
            border: none;
            color: #fff;
            font-weight: 600;
            padding: 10px 0;
            border-radius: 12px;
            transition: all 0.3s ease;
        }

            .btn-luxury:hover {
                background: linear-gradient(45deg, #f7c948, #d4af37);
                box-shadow: 0 5px 15px rgba(212, 175, 55, 0.4);
            }
    </style>
}

<!-- Banner -->
<div class="promo-banner">
    <img src="~/images/banner-sale.jpg" alt="Khuyến mãi đặc biệt" />
    <div class="promo-banner-overlay"></div>
    <div class="promo-banner-text">
        <h1>Khuyến Mãi Đặc Biệt</h1>
        <p>Giảm giá lên tới 50% cho mọi sản phẩm</p>
    </div>
</div>

<h2 class="mb-4 text-lg-center mt-5">Tất Cả Sản Phẩm</h2>
<form method="get" asp-controller="Home" asp-action="Index" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Tìm sản phẩm hoặc danh mục..."
               value="@Context.Request.Query["searchString"]" />
        <button class="btn btn-primary" type="submit">Tìm</button>
    </div>
</form>


<div class="row g-4">
    @foreach (var product in Model)
    {
        <div class="col-6 col-md-4 col-lg-3 d-flex">
            <div class="product-card flex-fill d-flex flex-column">
                <img src="~/images/@product.MainImage" alt="@product.Name" class="product-img" />

                <div class="product-title">@product.Name</div>
                <div class="product-category">@product.CategoryName</div>

                <div class="rating">★★★★☆ <span class="text-muted">(120)</span></div>
                <div class="price mb-3">@string.Format("{0:C}", product.Price)</div>

                <div class="mt-auto">
                    <a asp-controller="ProductCatalog" asp-action="Details" asp-route-id="@product.ProductId"
                       class="btn btn-outline-dark w-100 mb-2">
                        Xem chi tiết
                    </a>
                    <form asp-controller="Cart" asp-action="Add" method="post">
                        <input type="hidden" name="productId" value="@product.ProductId" />
                        <button type="submit" class="btn-luxury w-100">
                            Thêm vào giỏ
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
<!-- Modal thông báo -->
<div class="modal fade" id="cartModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title">Thông báo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @TempData["CartError"]
                @TempData["CartSuccess"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var error = '@TempData["ErrorMessage"]';
            var success = '@TempData["SuccessMessage"]';

            if (error && error !== "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    html: '@Html.Raw(TempData["ErrorMessage"])'
                });
            }

            if (success && success !== "") {
                Swal.fire({
                    icon: 'success',
                    title: 'Thành công',
                    html: '@Html.Raw(TempData["SuccessMessage"])',
                    showConfirmButton: false,
                    timer: 2000
                });
            }
        });
    </script>
}



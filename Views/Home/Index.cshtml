@model List<Ecommerce.Models.ProductViewModel>

@{
    ViewData["Title"] = "Danh Mục Sản Phẩm";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --primary-color: #2563eb;
            --secondary-color: #7c3aed;
            --accent-color: #f59e0b;
            --danger-color: #ef4444;
            --success-color: #10b981;
            --text-primary: #1f2937;
            --text-secondary: #6b7280;
            --bg-primary: #ffffff;
            --bg-secondary: #f9fafb;
            --border-color: #e5e7eb;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #f9fafb 0%, #e5e7eb 100%);
            color: var(--text-primary);
            padding: 0 !important;
            min-height: 100vh;
        }

        /* Header */
        .hero {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            padding: 60px 20px 80px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .hero::before {
                content: '';
                position: absolute;
                top: -50%;
                right: -10%;
                width: 500px;
                height: 500px;
                background: rgba(255, 255, 255, 0.1);
                border-radius: 50%;
                animation: float 6s ease-in-out infinite;
            }


        .hero h1 {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 12px;
            letter-spacing: -0.5px;
            position: relative;
            z-index: 1;
        }

        .hero p {
            font-size: 1.2rem;
            opacity: 0.95;
            font-weight: 400;
            position: relative;
            z-index: 1;
        }

        /* Search & Filter Container */
        .search-filter-container {
            max-width: 1200px;
            margin: -50px auto 40px;
            padding: 0 20px;
            position: relative;
            z-index: 10;
        }

        .search-box {
            background: var(--bg-primary);
            border-radius: 16px;
            padding: 30px;
            box-shadow: var(--shadow-lg);
        }

        .search-wrapper {
            display: flex;
            gap: 12px;
            margin-bottom: 24px;
        }

            .search-wrapper input {
                flex: 1;
                padding: 16px 24px;
                border: 2px solid var(--border-color);
                border-radius: 12px;
                font-size: 16px;
                transition: all 0.3s ease;
                outline: none;
            }

                .search-wrapper input:focus {
                    border-color: var(--primary-color);
                    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
                }

        .btn-search {
            padding: 16px 32px;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: var(--shadow-md);
        }

            .btn-search:hover {
                transform: translateY(-2px);
                box-shadow: var(--shadow-lg);
            }

        /* Filter Section */
        .filter-section {
            border-top: 1px solid var(--border-color);
            padding-top: 24px;
        }

        .filter-label {
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 16px;
            font-size: 15px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .filter-chips {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
        }

        .filter-chip {
            padding: 10px 20px;
            border: 2px solid var(--border-color);
            border-radius: 24px;
            background: var(--bg-secondary);
            color: var(--text-secondary);
            font-weight: 500;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .filter-chip:hover {
                border-color: var(--primary-color);
                background: rgba(37, 99, 235, 0.05);
                color: var(--primary-color);
                transform: translateY(-2px);
            }

            .filter-chip.active {
                background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
                border-color: transparent;
                color: white;
                box-shadow: var(--shadow-md);
            }

            .filter-chip i {
                font-size: 16px;
            }

        /* Products Grid */
        .products-container {
            max-width: 1400px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
            gap: 24px;
            padding: 0 20px 60px;
        }

        .product-card {
            background: var(--bg-primary);
            border-radius: 16px;
            box-shadow: var(--shadow-sm);
            transition: all 0.3s ease;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            border: 1px solid var(--border-color);
        }

            .product-card:hover {
                transform: translateY(-8px);
                box-shadow: var(--shadow-lg);
                border-color: var(--primary-color);
            }

        .product-image {
            height: 220px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--bg-secondary);
            padding: 20px;
            position: relative;
            overflow: hidden;
        }

            .product-image::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(135deg, rgba(37, 99, 235, 0.05), rgba(124, 58, 237, 0.05));
                opacity: 0;
                transition: opacity 0.3s ease;
            }

        .product-card:hover .product-image::before {
            opacity: 1;
        }

        .product-image img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
            transition: transform 0.3s ease;
            position: relative;
            z-index: 1;
        }

        .product-card:hover .product-image img {
            transform: scale(1.05);
        }

        .product-info {
            padding: 20px;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .product-category {
            color: var(--primary-color);
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 8px;
        }

        .product-name {
            font-size: 16px;
            font-weight: 600;
            color: var(--text-primary);
            height: 44px;
            overflow: hidden;
            line-height: 1.4;
            margin-bottom: 12px;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }

        .rating {
            display: flex;
            align-items: center;
            gap: 6px;
            margin-bottom: 12px;
        }

        .stars {
            color: var(--accent-color);
            font-size: 14px;
        }

        .rating-count {
            font-size: 12px;
            color: var(--text-secondary);
        }

        .price {
            font-size: 24px;
            font-weight: 700;
            color: var(--danger-color);
            margin-bottom: 16px;
        }

        .buttons-group {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-top: auto;
        }

        .btn {
            padding: 12px 16px;
            border-radius: 10px;
            font-size: 14px;
            font-weight: 600;
            text-transform: none;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            cursor: pointer;
            border: none;
        }

        .btn-view {
            background: transparent;
            color: var(--primary-color);
            border: 2px solid var(--primary-color);
            text-decoration: none;
        }

            .btn-view:hover {
                background: var(--primary-color);
                color: white;
                transform: translateY(-2px);
                box-shadow: var(--shadow-md);
            }

        .btn-add {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            box-shadow: var(--shadow-sm);
        }

            .btn-add:hover {
                transform: translateY(-2px);
                box-shadow: var(--shadow-md);
            }

        /* Floating Action Button */
        .add-product-btn {
            position: fixed;
            bottom: 40px;
            right: 40px;
            z-index: 1000;
            width: 64px;
            height: 64px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--danger-color), #dc2626);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            box-shadow: 0 8px 24px rgba(239, 68, 68, 0.4);
            transition: all 0.3s ease;
            text-decoration: none;
        }

            .add-product-btn:hover {
                transform: scale(1.1) rotate(90deg);
                box-shadow: 0 12px 32px rgba(239, 68, 68, 0.5);
            }

      
    </style>
}

<div class="hero">
    <h1>Danh Mục Sản Phẩm</h1>
    <p>Khám phá các sản phẩm công nghệ và tiện ích mới nhất</p>
</div>

<div class="search-filter-container">
    <div class="search-box">
        <form method="get" asp-controller="Home" asp-action="Index" class="search-wrapper">
            <input type="text" name="searchString" placeholder="Tìm kiếm sản phẩm, danh mục..."
                   value="@Context.Request.Query["searchString"]" />
            <button class="btn-search" type="submit">
                <i class="fas fa-search"></i> Tìm kiếm
            </button>
        </form>

        <div class="filter-section">
            <div class="filter-label">
                <i class="fas fa-filter"></i>
                Lọc theo danh mục
            </div>
            <div class="filter-chips">
                <a href="@Url.Action("Index", "Home")"
                   class="filter-chip @(string.IsNullOrEmpty(Context.Request.Query["category"]) ? "active" : "")">
                    <i class="fas fa-th"></i>
                    Tất cả
                </a>
                <a href="@Url.Action("Index", "Home", new { category = "Electronics" })"
                   class="filter-chip @(Context.Request.Query["category"] == "Electronics" ? "active" : "")">
                    <i class="fas fa-laptop"></i>
                    Electronics
                </a>
                <a href="@Url.Action("Index", "Home", new { category = "Books" })"
                   class="filter-chip @(Context.Request.Query["category"] == "Books" ? "active" : "")">
                    <i class="fas fa-book"></i>
                    Books
                </a>
                <a href="@Url.Action("Index", "Home", new { category = "Clothing" })"
                   class="filter-chip @(Context.Request.Query["category"] == "Clothing" ? "active" : "")">
                    <i class="fas fa-tshirt"></i>
                    Clothing
                </a>
            </div>
        </div>
    </div>
</div>

<div class="products-container">
    @foreach (var product in Model)
    {
        <div class="product-card">
            <a asp-controller="ProductCatalog" asp-action="Details" asp-route-id="@product.ProductId" class="product-image">
                <img src="~/images/@product.MainImage" alt="@product.Name">
            </a>

            <div class="product-info">
                <div class="product-category">@product.CategoryName</div>

                <a asp-controller="ProductCatalog" asp-action="Details" asp-route-id="@product.ProductId" class="product-name text-decoration-none">
                    @product.Name
                </a>

                <div class="rating">
                    <span class="stars">★★★★★</span>
                    <span class="rating-count">(203)</span>
                </div>

                <div class="price">@product.Price.ToString("N0") đ</div>

                <div class="buttons-group">
                    <a asp-controller="ProductCatalog" asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-view">
                        <i class="fas fa-info-circle"></i> Xem chi tiết
                    </a>

                    <form asp-controller="Cart" asp-action="Add" method="post" style="margin: 0;">
                        <input type="hidden" name="productId" value="@product.ProductId" />
                        <input type="hidden" name="quantity" value="1" />
                        <button class="btn btn-add" type="submit">
                            <i class="fas fa-shopping-cart"></i> Thêm vào giỏ
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<a asp-controller="ProductCatalog" asp-action="Create" class="add-product-btn" title="Thêm sản phẩm mới">
    <i class="fas fa-plus"></i>
</a>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var error = '@TempData["ErrorMessage"]';
            var success = '@TempData["SuccessMessage"]';

            if (error && error !== "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    html: '@Html.Raw(TempData["ErrorMessage"])'
                });
            }

            if (success && success !== "") {
                Swal.fire({
                    icon: 'success',
                    title: 'Thành công',
                    html: '@Html.Raw(TempData["SuccessMessage"])',
                    showConfirmButton: false,
                    timer: 2000
                });
            }
        });
    </script>
}
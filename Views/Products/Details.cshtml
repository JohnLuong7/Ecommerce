@model Ecommerce.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Short Description</dt>
        <dd class="col-sm-10">@Model.ShortDescription</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">SKU</dt>
        <dd class="col-sm-10">@Model.SKU</dd>

        <dt class="col-sm-2">Is Published</dt>
        <dd class="col-sm-10">@Model.IsPublished</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>

        <dt class="col-sm-2">Inventory Quantity</dt>
        <dd class="col-sm-10">@Model.Inventory?.Quantity ?? 0</dd>

        <dt class="col-sm-2">Images</dt>
        <dd class="col-sm-10">
            @if (Model.ProductImages != null && Model.ProductImages.Any())
            {
                foreach (var img in Model.ProductImages)
                {
                    <img src="@Url.Content("~/images/" + img.FileName)" alt="Product Image" style="max-width:150px; margin-right:10px;" />
                }
            }
            else
            {
                <p>No images</p>
            }
        </dd>

    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>

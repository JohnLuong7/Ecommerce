@model IEnumerable<Ecommerce.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<p>
    <a asp-action="Create" asp-controller="ProductCreate" class="btn btn-success">Create New</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().Price)</th>
            <th>Category</th>
            <th>@Html.DisplayNameFor(m => m.First().IsPublished)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Category?.Name</td>
                <td>@(item.IsPublished ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Details" asp-controller="ProductDetail" asp-route-id="@item.ProductId">Details</a> |
                    <a asp-action="Edit" asp-controller="ProductEdit" asp-route-id="@item.ProductId">Edit</a> |
                    <a asp-action="Delete" asp-controller="Products" asp-route-id="@item.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
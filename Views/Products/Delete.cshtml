@model Ecommerce.Models.Product

@{
    ViewData["Title"] = "Xác Nhận Xóa Sản Phẩm";
}

<h2>Xác Nhận Xóa</h2>

<h4>Bạn có chắc chắn muốn xóa sản phẩm này?</h4>

<div class="card shadow-sm p-3 mb-4">
    <h5 class="card-title text-danger">@Model.Name</h5>
    <dl class="row">

        <dt class="col-sm-3">Giá</dt>
        <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-3">Danh mục</dt>
        <dd class="col-sm-9">@Model.Category?.Name</dd>

        @* Bạn có thể thêm các thông tin khác ở đây nếu cần *@

    </dl>
</div>

<form asp-action="Delete" method="post" asp-route-id="@Model.ProductId">
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-danger">Xóa Vĩnh Viễn</button> |
    <a asp-action="Index" class="btn btn-secondary" asp-controller="Products">Hủy Bỏ</a>
</form>
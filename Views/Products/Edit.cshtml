@model Ecommerce.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Edit Product";
    // Ép kiểu categories một cách an toàn hơn
    var categories = ViewData["Categories"] as List<Ecommerce.Models.Category>;
}

<h2>Chỉnh Sửa Sản Phẩm: @Model.Name</h2>

@* SỬA: Thêm enctype="multipart/form-data" để xử lý upload file *@
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductId" />
    @* Giữ lại các trường JSON/DateTime ẩn nếu chúng không được hiển thị/chỉnh sửa *@
    <input type="hidden" asp-for="CreatedDate" />
    <input type="hidden" asp-for="VariantsJson" />
    <input type="hidden" asp-for="ColorsJson" />
    <input type="hidden" asp-for="PromotionsJson" />
    <input type="hidden" asp-for="OfferBannerJson" />
    <input type="hidden" asp-for="SpecsJson" />
    <input type="hidden" asp-for="CommitmentsJson" />
    <input type="hidden" asp-for="OriginalPrice" />


    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ShortDescription" class="form-label"></label>
        <input asp-for="ShortDescription" class="form-control" />
        <span asp-validation-for="ShortDescription" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" type="number" step="1" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Sku" class="form-label"></label> @* SỬA LỖI CS1061 *@
        <input asp-for="Sku" class="form-control" /> @* SỬA LỖI CS1061 *@
        <span asp-validation-for="Sku" class="text-danger"></span> @* SỬA LỖI CS1061 *@
    </div>

    @* THÊM TRƯỜNG CẬP NHẬT TỒN KHO *@@* (quantity) *@
    <div class="form-group mb-3">
        <label for="quantity" class="form-label">Số lượng Tồn kho</label>
        <input type="number" id="quantity" name="quantity" class="form-control"
               value="@(Model.Inventory?.Quantity ?? 0)" required min="0" />
    </div>

    <div class="form-group mb-3 form-check">
        <input asp-for="IsPublished" class="form-check-input" />
        <label asp-for="IsPublished" class="form-check-label"></label>
        <span asp-validation-for="IsPublished" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(categories, "CategoryId", "Name", Model.CategoryId))">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="newImages">Upload Additional Images</label>
        <input type="file" name="newImages" id="newImages" multiple class="form-control" />
    </div>

    <h4>Existing Images (@(Model.ProductImages?.Count ?? 0))</h4>
    <div>
        @if (Model.ProductImages != null && Model.ProductImages.Any())
        {
            foreach (var img in Model.ProductImages)
            {
                <div style="display:inline-block; margin:10px; position:relative;">
                    <img src="@Url.Content("~/images/" + img.FileName)" alt="Product Image" style="max-width:150px;" />
                    @* Thêm chỉ báo ảnh chính *@
                    @if (img.IsMain)
                    {
                        <span class="badge bg-primary" style="position:absolute; bottom:0; left:0;">Main</span>
                    }

                    <form asp-action="DeleteImage" method="post" style="position:absolute; top:5px; right:5px;">
                        <input type="hidden" name="imageId" value="@img.ProductImageId" />
                        <button type="submit" class="btn btn-sm btn-danger" title="Delete image"
                                onclick="return confirm('Are you sure you want to delete this image?');">
                            X
                        </button>
                    </form>
                </div>
            }
        }
        else
        {
            <p>No images uploaded yet.</p>
        }
    </div>

    <hr />

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model Ecommerce.ViewModels.ManageRolesViewModel

@{
    ViewData["Title"] = "Manage Roles";
}

<h2>Manage Roles for User</h2>

<form asp-action="ManageRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="mb-3">
        @foreach (var role in Model.Roles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="Roles[@Model.Roles.IndexOf(role)].Selected" value="true" @(role.Selected ? "checked" : "") />
                <input type="hidden" name="Roles[@Model.Roles.IndexOf(role)].RoleName" value="@role.RoleName" />
                <label class="form-check-label">@role.RoleName</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Save Roles</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

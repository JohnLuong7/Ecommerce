@model List<Ecommerce.Models.Order>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Lịch sử đơn hàng";
    var orderSuccess = Context.Session.GetString("OrderSuccess");
    if (!string.IsNullOrEmpty(orderSuccess))
    {
        Context.Session.Remove("OrderSuccess"); // xóa session để không hiện lại khi F5
    }
}

<h2 class="mb-4">📦 Lịch sử đơn hàng</h2>

@if (!string.IsNullOrEmpty(orderSuccess))
{
    <div id="thankYouMessage" style="display:none;" class="alert alert-success">
        🎉 Cảm ơn bạn đã mua hàng tại shop chúng tôi!
    </div>

    <script>
        setTimeout(function () {
            document.getElementById("thankYouMessage").style.display = "block";
        }, 5000);
    </script>
}

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">Bạn chưa có đơn hàng nào.</div>
}
else
{
    <div class="accordion" id="ordersAccordion">
        @for (int i = 0; i < Model.Count; i++)
        {
            var order = Model[i];
            var collapseId = $"collapse{i}";
            var headingId = $"heading{i}";
            var isFirst = (i == 0);
            var totalAmount = order.OrderItems.Sum(x => x.Quantity * x.UnitPrice);

            <div class="accordion-item mb-2">
                <h2 class="accordion-header" id="@headingId">
                    <button class="accordion-button @(isFirst ? "" : "collapsed")"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#@collapseId"
                            aria-expanded="@(isFirst.ToString().ToLower())"
                            aria-controls="@collapseId">
                        <div class="d-flex flex-column">
                            <span>🆔 Đơn hàng #@order.OrderId | Ngày: @order.OrderDate.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</span>
                            <small>Trạng thái: <strong>@order.Status</strong> | Tổng tiền: <strong>@totalAmount.ToString("C")</strong></small>
                        </div>
                    </button>
                </h2>
                <div id="@collapseId"
                     class="accordion-collapse collapse @(isFirst ? "show" : "")"
                     aria-labelledby="@headingId"
                     data-bs-parent="#ordersAccordion">
                    <div class="accordion-body">
                        <p><strong>📍 Địa chỉ giao hàng:</strong> @order.ShippingAddress</p>
                        <p><strong>💳 Phương thức thanh toán:</strong> @order.PaymentMethod</p>

                        <table class="table table-striped table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-end">Giá đơn vị</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in order.OrderItems)
                                {
                                    <tr>
                                        <td>@item.Product.Name</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                        <td class="text-end">@((item.Quantity * item.UnitPrice).ToString("C"))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <th colspan="3" class="text-end">Tổng cộng:</th>
                                    <th class="text-end">@totalAmount.ToString("C")</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
}

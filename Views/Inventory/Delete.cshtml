@model Ecommerce.Models.Inventory

@{
    ViewData["Title"] = "Delete Inventory";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this inventory?</h3>

<div>
    <h4>Product: @Model.Product?.Name</h4>
    <h4>Quantity: @Model.Quantity</h4>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="InventoryId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
